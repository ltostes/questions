<div class="container-fluid">
<div class="row">
	<div class="col-sm-2 col-sm-offset-2">
		<h1>Nova aula</h1>
	</div>
</div>
</br>

<%= form_for @classroom, url: classrooms_path, html: {class: "form-horizontal"} do |form| %>
  <div class="form-group">
    <%= form.label(:name, "Nome", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:name, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:description, "Descrição", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:description, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label(:verification_code, "Código de verificação", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:verification_code, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:beginning, "Data de início", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.date_select(:beginning, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:end, "Data de término", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.date_select(:end, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

	
	<div class="col-sm-2" align="right">
		<%= button_to "Voltar", :back, class:"btn btn-default" %>
	</div>


  <div class="col-sm-2">
    <button type="submit"class="btn btn-default">Criar</button>
  </div>

<% end %>
