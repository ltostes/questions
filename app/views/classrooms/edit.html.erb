<h1>Editar Aula</h1>

<%= form_for @classroom, html: {class: "form-horizontal"} do |form| %>
  <div class="form-group">
    <%= form.label(:name, "Nome", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:name, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:description, "Descrição", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:description, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label(:verification_code, "Código de verificação", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:verification_code, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:beginning, "Data de início", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.date_select(:beginning, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:end, "Data de término", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.date_select(:end, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="col-sm-2">
    <button type="submit"class="btn btn-default">Salvar alterações</button>
  </div>

<% end %>
