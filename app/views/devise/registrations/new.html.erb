<div class="container-fluid" align="center">
	<img src="/assets/logo.png" style="width: 200px" alt="Duvidas">
	<ul class="nav nav-tabs">
  <li role="presentation" style="width: 50%"><a href="/users/sign_in">Login</a></li>
  <li role="presentation" style="width: 50%" class="active"><a href="#">Inscreva-se</a></li>
</ul>
</br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

	</br>
  <div class="form-group">
  	<%= f.label(:name, "Nome", class: "col-sm-2 control-label") %>
    <div class="col-sm-4">
    <%= f.text_field(:name, class: "form-control", placeholder: "Primeiro nome") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label(:surname, "Sobrenome", class: "col-sm-2 control-label") %> 
    <div class="col-sm-4">
    <%= f.text_field(:surname, class: "form-control", placeholder: "Qualquer sobrenome") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  
  <div class="form-group">
  	<%= f.label(:nickname, "Apelido", class: "col-sm-2 control-label") %> 
  	
    <div class="col-sm-4">
    <%= f.text_field(:nickname, class: "form-control", placeholder: "Apelido (opcional)") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label(:email, "Email", class: "col-sm-2 control-label") %> 
  	
    <div class="col-sm-4">
    <%= f.email_field(:email, class: "form-control", placeholder: "Endereço de email") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  
  <div class="form-group">
  	<%= f.label(:password, "Senha", class: "col-sm-2 control-label") %> 
  	
    <div class="col-sm-4">
    <%= f.password_field(:password, class: "form-control", placeholder: "Mínimo de 8 caracteres") %>
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label(:password_confirmation, "Confirme a senha", class: "col-sm-2 control-label") %> 
  	
    <div class="col-sm-4">
    <%= f.password_field(:password_confirmation, class: "form-control", placeholder: "Confirme sua senha") %>
    </div>
  </div>
  </br>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-2">
        <%= f.submit "Inscrever-se", class: "btn btn-danger"%>
      </div>
    </div>
  <% end %>
</div>

