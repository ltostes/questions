<!DOCTYPE html>
<html>
<head>
  <title>Questions</title>
  
  <!-- Styles, JS and metadata -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
	
<!-- Navigation Bar -->
<div class="container">
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target="name">
        <span class="icon-bar"></span>
     		</a>	
          <ul class="nav navbar-nav navbar-right">
          	<li>
          	<a href="#" class="dropdown-toggle" data-toggle="collapse" role="button" id="name" aria-expanded="false"><%= user_signed_in? ? (current_user.name + " " + current_user.surname) : "Você não está logado" %></a>
            </li>
            <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></span></a>
	          <ul class="dropdown-menu" role="menu">
            <li>Minha Conta</li>
            <li class="divider"></li>
          	<li><%= user_signed_in? ? link_to('Logout', destroy_user_session_path, :method => :delete) : link_to('Login', new_user_session_path) %></li>
          </ul>
          </ul>

      </div>
    </div> 
    
<!-- Alerts -->

<%unless notice.nil?%>
<div class="alert alert-success" role="alert"> <%= notice %></div>
<%end%>
<%unless alert.nil?%>
<p class="alert"><%= alert %></p>
<%end%>
<%= yield %>

<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container">
  </div>
</nav>
</body>
</html>
