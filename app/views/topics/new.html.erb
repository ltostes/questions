<h1>Novo Tópico</h1>

<%= form_for @topic, url: topics_path, html: {class: "form-horizontal"} do |form| %>
  <div class="form-group">
    <%= form.label(:title, "Nome", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:title, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:description, "Descrição", class: "col-sm-2 control-label")%>
    <div class="col-sm-4">
      <%= form.text_field(:description, class: "form-control") %>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  
  <div class="col-sm-2">
    <button type="submit"class="btn btn-default">Criar</button>
  </div>

<% end %>
